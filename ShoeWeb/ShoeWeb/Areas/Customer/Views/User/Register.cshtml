@model ShoeWeb.Models.Identity.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}


<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="~/Content/images/image1.png" width="100%">
            </div>
            <form id="RegForm" action="@Url.Action("Register", "User")" method="post" onsubmit="SubmitRegister(event)">
                @if (ViewBag.ThongBao != null)
                {
                    <span>@ViewBag.ThongBao</span>
                }
                @Html.AntiForgeryToken()
                <input id="email_register" name="Email" type="email" placeholder="Email" value="@Model.Email" required />
                <input id="password_register" name="Password" type="password" placeholder="Password" required />
                <input id="password_confirm_register" name="ConfirmPassword" type="password" placeholder="Confirm Password" required />
                <button type="submit" class="btn">Register</button>
            </form>

        </div>
    </div>
</div>

<style>
    /* Đảm bảo body không bị cuộn ngang */
    body {
        overflow-x: hidden; /* Không cho phép cuộn ngang */
    }

    /* Form đăng ký - hiển thị bên phải màn hình */
    #RegForm {
        width: 350px; /* Chiều rộng của form */
        height: auto; /* Chiều cao tự động tùy theo nội dung */
        max-height: 90vh; /* Giới hạn chiều cao của form (90% chiều cao màn hình) */
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: absolute; /* Đảm bảo form cố định ở vị trí trên màn hình */
        top: 120px; /* Cách mép trên 120px */
        left: 1150px; /* Đặt form vào mép phải màn hình */
        z-index: 1000; /* Đảm bảo form nằm trên các phần tử khác */
        margin-right: 20px; /* Đảm bảo form không chạm vào mép phải của màn hình */
        overflow-y: auto; /* Hiển thị thanh cuộn dọc nếu nội dung vượt quá chiều cao */
    }

        /* Định dạng tiêu đề form */
        #RegForm h4 {
            color: #333;
            margin-bottom: 20px;
        }

        /* Định dạng các trường nhập liệu */
        #RegForm input[type="email"],
        #RegForm input[type="password"] {
            width: 100%; /* Chiếm toàn bộ chiều rộng */
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-top: 5px;
            margin-bottom: 15px;
            box-sizing: border-box;
        }

        /* Định dạng nút submit */
        #RegForm button[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            /* Đổi màu khi hover nút submit */
            #RegForm button[type="submit"]:hover {
                background-color: #0056b3;
            }

    /* Định dạng thông báo lỗi nếu có */
    .text-danger {
        color: #dc3545;
        font-size: 0.9em;
    }
</style> 