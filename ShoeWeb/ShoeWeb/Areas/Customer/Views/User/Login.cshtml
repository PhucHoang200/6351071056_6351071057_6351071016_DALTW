@model ShoeWeb.Models.Identity.LoginViewModel
<!-- Form Login -->

<style>
    /* Đảm bảo không bị cuộn ngang */
    body {
        overflow-x: hidden;
    }

    /* Container chung cho cả form */
    #LoginForm {
        width: 450px; /* Tăng chiều rộng của form */
        height: auto; /* Chiều cao tự động tùy theo nội dung */
        max-height: 90vh; /* Giới hạn chiều cao của form (90% chiều cao màn hình) */
        padding: 40px; /* Tăng padding để nội dung có khoảng cách thoải mái */
        background-color: #ffffff;
        border-radius: 10px; /* Tăng bo góc cho form mềm mại hơn */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0); /* Tăng độ nổi của bóng đổ */
        position: absolute; /* Đảm bảo form cố định ở vị trí trên màn hình */
        top: 100px; /* Cách mép trên 100px */
        left: calc(50% - 225px); /* Canh giữa form trên màn hình */
        z-index: 1000; /* Đảm bảo form nằm trên các phần tử khác */
        overflow-y: auto; /* Hiển thị thanh cuộn dọc nếu nội dung vượt quá chiều cao */
    }

    /* Định dạng tiêu đề */
    #RegForm h4 {
        color: #333;
        margin-bottom: 20px;
        text-align: center; /* Tiêu đề canh giữa */
    }

    /* Định dạng ô input */
    .form-container input[type="text"],
    .form-container input[type="email"],
    .form-container input[type="password"] {
        width: calc(100% - 20px);
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-top: 10px;
        margin-bottom: 20px;
        box-sizing: border-box;
    }

    /* Nút submit */
    .form-container button[type="submit"] {
        width: 200px;
        padding: 12px;
        background-color: #007bff;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: block;
        margin: 20px auto;
    }

    /* Hover cho nút */
    .form-container button[type="submit"] {
        background-color: #0056b3;
        width: 150px;
    }

    /* Liên kết */
    .form-container p {
        text-align: center;
        margin-top: 10px;
    }

        .form-container p a {
            color: #007bff;
            text-decoration: none;
        }

            .form-container p a:hover {
                text-decoration: underline;
            }

    /* Thông báo lỗi */
    .text-danger {
        color: #dc3545;
        font-size: 0.9em;
        margin-top: -10px;
        margin-bottom: 10px;
    }
</style>
<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="~/Content/images/image1.png" width="70%">
            </div>
            <div class="col-2">
                <div class="form-container" style="height: 500px !important; display: block;">
                    <span onclick="login()">Login</span>
                    <hr id="Indicator">

                    <form id="LoginForm"
                          style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); margin: 0; padding: 0;"
                          action="@Url.Action("Login", "User", new { returnUrl = ViewBag.ReturnUrl })"
                          method="post">
                        @Html.AntiForgeryToken()

                        <!-- Thông báo lỗi -->
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="text-danger">@ViewBag.ThongBao</div>
                        }

                        <!-- Email Input -->
                        <input id="Email_login" name="Email" type="text" placeholder="Email" value="@Model.Email" required />

                        <!-- Password Input -->
                        <input id="Password_login" name="Password" type="password" placeholder="Password" required />

                        <!-- Submit Button -->
                        <button type="submit" class="btn">Log in</button>

                        <!-- Link to Register -->
                        <p>
                            <a href="/User/Register">Register as a new user</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
