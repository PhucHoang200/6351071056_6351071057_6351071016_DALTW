@model ShoeWeb.Models.Identity.LoginViewModel
<!-- Form Login -->

<style>
    /* Đảm bảo không bị cuộn ngang */
    body {
        overflow-x: hidden;
    }

    span {
        display: block; /* Đảm bảo thẻ span xử lý như một khối */
        width: 100%; /* Chiếm toàn bộ chiều rộng của thẻ cha */
        text-align: center; /* Căn giữa nội dung chữ */
        font-size: 20px; /* Kích thước chữ */
        margin: 0px; /* Xóa khoảng cách ngoài không cần thiết */
        padding: 20px 0px; /* Thêm khoảng cách trên và dưới */
        box-sizing: border-box; /* Đảm bảo padding không ảnh hưởng đến chiều rộng */
        white-space: nowrap; /* Ngăn chữ xuống dòng */
    }

    #LoginForm {
        width: 450px; /* Tăng chiều rộng của form */
        padding: 40px; /* Khoảng cách bên trong form */
        background-color: #ffffff;
        border-radius: 10px; /* Bo góc cho form */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0); /* Thêm bóng đổ nhẹ */
        position: absolute;
        top: 100px;
        left: 50%;
        transform: translateX(-50%); /* Đảm bảo form căn giữa màn hình */
        z-index: 1000;
    }

    .form-container {
        display: flex; /* Sử dụng flexbox để căn chỉnh */
        flex-direction: column; /* Các phần tử xếp theo cột */
        align-items: center; /* Căn giữa nội dung theo chiều ngang */
        text-align: center; /* Căn giữa nội dung chữ */
    }

        .form-container span {
            width: 100%; /* Chiều rộng tối đa theo form */
            text-align: center; /* Chữ nằm chính giữa */
            margin-bottom: 0px; /* Khoảng cách giữa span và các phần tử khác */
        }


    /* Định dạng ô input */
    .form-container input[type="text"],
    .form-container input[type="email"],
    .form-container input[type="password"] {
        width: calc(100% - 20px);
        padding: 25px 25px; /* Tăng padding trên và dưới */
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-top: 1px;
        margin-bottom: 1px;
        box-sizing: border-box;
    }

    /* Nút submit */
    .form-container button[type="submit"] {
        width: 150px;
        padding: 12px;
        background-color: #007bff;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: block;
        margin: 20px auto;
    }

        /* Hover cho nút */
        .form-container button[type="submit"]:hover {
            background-color: #28a745;
            width: 150px;
        }

    /* Liên kết */
    .form-container p {
        text-align: center;
        margin-top: 10px;
    }

        .form-container p a {
            color: #007bff;
            text-decoration: none;
        }

            .form-container p a:hover {
                text-decoration: underline;
            }

    /* Thông báo lỗi */
    .text-danger {
        color: #dc3545;
        font-size: 0.9em;
        margin-bottom: 10px;
    }

</style>
<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="~/Content/images/image1.png" width="70%">
            </div>
            <div class="col-2">
                <div class="form-container" style="height: 500px !important; display: block;">
                    <span onclick="login()">Đăng nhập</span>

                    <hr id="Indicator">

                    @if (ViewBag.ResendEmail as bool? == true)
                    {
                        <div style="  ">
                            <span style="font-size: 15px; color: #555; display: block !important; width: 100%;">
                                @ViewBag.ErrorMessage <a href="@Url.Action("ResendConfirmationEmail", "User", new { email = ViewBag.UserEmail })"
                                                         style="font-size: 15px; text-decoration: none; color: #007bff;">
                                    Gửi lại Email
                                </a>
                            </span>
                        </div>
                      

                    }


                    <form id="LoginForm"
                          style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); margin: 0; padding: 0;"
                          action="@Url.Action("Login", "User", new { returnUrl = ViewBag.ReturnUrl })"
                          method="post">
                        @Html.AntiForgeryToken()

                        <!-- Hiển thị lỗi -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li class="text-danger">@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Input Email -->
                        <input id="Email_login" name="Email" type="text" placeholder="Email" value="@Model.Email" required />
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })

                        <!-- Input Password -->
                        <input id="Password_login" name="Mật khẩu" type="Password" placeholder="Mật khẩu" required />
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })

                        <!-- Submit Button -->
                        <button type="submit" class="btn">Đăng nhập</button>

                        <!-- Link to Register -->
                        <p>
                            <a href="@Url.Action("Register", "User")">Đăng ký</a>
                        </p>
                        <p>
                            <a href="@Url.Action("ForgotPassword", "User")">Quên mật khẩu?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
