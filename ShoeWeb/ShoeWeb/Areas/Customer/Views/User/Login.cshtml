@model ShoeWeb.Models.Identity.LoginViewModel
<!-- Form Login -->

<style>
    .account-page .form-container {
        width: 100%; /* Đảm bảo form chiếm toàn bộ chiều rộng */
        max-width: 500px; /* Giới hạn chiều rộng của form */
        padding: 30px; /* Khoảng đệm xung quanh form */
        background-color: #ffffff; /* Màu nền trắng cho form */
        border-radius: 8px; /* Bo góc cho form */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
        position: absolute; /* Giữ form cố định khi cuộn trang */
        right: 20px; /* Cách mép phải 20px */
        top: 120px; /* Cách mép trên 120px */
        z-index: 1000; /* Đảm bảo form nằm trên các phần tử khác */
        display: flex; /* Sử dụng Flexbox */
        flex-direction: column; /* Căn theo cột */
        justify-content: flex-start; /* Căn các phần tử từ trên xuống dưới */
        align-items: center; /* Căn giữa form theo chiều ngang */
    }

    /* Định dạng các hàng trong form */
    .form-container .row {
        display: flex; /* Sử dụng Flexbox để căn ngang các phần tử */
        align-items: center; /* Căn giữa theo chiều dọc */
        margin-bottom: 15px; /* Khoảng cách giữa các hàng */
        justify-content: center; /* Các phần tử không có khoảng cách đều, căn sang trái */
        width: 100%; /* Đảm bảo hàng chiếm đủ chiều rộng của form */
    }

    /* Định dạng các nhãn */
    .form-container label {
        color: #555; /* Màu chữ cho label */
        font-weight: bold;
        text-align: center; /* Căn nhãn sang trái */
        flex: 0 0 30%; /* Nhãn chiếm 30% chiều rộng */
        max-width: 150px; /* Giới hạn chiều rộng tối đa của nhãn */
        margin-right: 10px; /* Khoảng cách giữa nhãn và input */
    }

    /* Định dạng các ô input */
    .form-container input[type="text"],
    .form-container input[type="password"] {
        padding: 10px; /* Padding bên trong ô input */
        border: 1px solid #ddd; /* Viền màu xám nhạt */
        border-radius: 5px; /* Bo góc */
        flex: 1; /* Đảm bảo input chiếm phần còn lại của hàng */
        width: 100%; /* Đảm bảo input giãn đầy đủ */
        box-sizing: border-box; /* Đảm bảo padding không ảnh hưởng đến chiều rộng */
    }

    /* Định dạng nút submit */
    .form-container input[type="submit"] {
        width: 100%; /* Chiều rộng nút bằng 100% */
        padding: 10px;
        background-color: #007bff; /* Màu xanh cho nút */
        color: #ffffff;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 20px; /* Khoảng cách phía trên */
    }

        .form-container input[type="submit"]:hover {
            background-color: #0056b3; /* Đổi màu khi hover */
        }

    /* Định dạng cho link đăng ký */
    .form-container p {
        text-align: center; /* Căn giữa link */
        margin-top: 10px;
    }

        .form-container p a {
            color: #007bff;
            text-decoration: none;
        }

            .form-container p a:hover {
                text-decoration: underline;
            }

    /* Định dạng thông báo lỗi */
    .text-danger {
        color: #dc3545; /* Màu đỏ */
        font-size: 0.9em; /* Font nhỏ */
        text-align: center; /* Căn giữa nếu xuất hiện */
    }
</style>
<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="~/Content/images/image1.png" width="100%">
            </div>
            <div class="col-2">
                <div class="form-container" style="height: 500px !important; display: block;">
                    <span onclick="login()">Login</span>
                    <hr id="Indicator">

                    <form id="LoginForm" style="left: 0px !important;" action="@Url.Action("Login", "User", new { returnUrl = ViewBag.ReturnUrl })" method="post" role="form">
                        @Html.AntiForgeryToken()

                        <!-- Email Row -->
                        <div class="form-group row">
                            <label for="Email" class="label">Email</label>
                            <input type="text" name="Email" id="Email_login" class="form-control" value="@Model.Email" />
                            <div class="text-danger" id="EmailValidationMessage"></div>
                        </div>

                        <!-- Password Row -->
                        <div class="form-group row">
                            <label for="Password" class="label">Password</label>
                            <input type="password" name="Password" id="Password_login" class="form-control" value="@Model.Password" />
                            <div class="text-danger" id="PasswordValidationMessage"></div>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group row">
                            <input type="submit" value="Log in" class="btn btn-outline-dark" />
                        </div>

                        <!-- Register Link -->
                        <p>
                            <a href="/User/Register">Register as a new user</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


