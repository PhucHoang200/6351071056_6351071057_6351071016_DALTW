@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

@model ShoeWeb.Areas.Customer.CustomerVM.ResetPasswordViewModel

<div class="form-container">
    <h2>Reset Password</h2>
    @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới")
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
        <div>
            @Html.LabelFor(m => m.ConfirmPassword, "Nhập lại mật khẩu mới")
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        <button type="submit" class="btn btn-primary">Xác nhận</button>
    }
</div>

<style>
    .form-container {
        max-width: 600px;
    }

    .text-danger {
        color: red;
    }

    button[type="submit"] {
        display: block;
        visibility: visible;
    }

    .form-container span {
        width: 300px;
    }
</style>
