<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width-device-width, initial-scale=1.0">
    <title>Redstore | Ecommerce website</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
    <!--added a cdn link by searching font awesome4 cdn and getting this link from https://www.bootstrapcdn.com/fontawesome/ this url*/-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>


<body>
    <div class="header">
        <div class="container">
            <div class="navbar">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")"><img src="~/Content/images/logo.png" width="125"></a>
                </div>
                <!-- Thanh tìm kiếm với AJAX -->
                <!-- Form tìm kiếm -->
                <form action="@Url.Action("Search", "Home", new { area = "Customer" })" method="get" class="search-form">
                    <input type="text" id="searchBox" name="searchTerm" placeholder="Product search..." />
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
                <nav>
                    <ul id="MenuItems">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("Product", "Home")">Products</a></li>

                        @if (Session["LoggedUserName"] != null)
                        {
                            <li class="nav-item dropdown">
                                <!-- Định dạng giống ComboBox cho "Hello, người dùng" -->
                                <a class="nav-link user-button" href="javascript:void(0);" onclick="toggleUserMenu()">
                                    Hello, @Session["LoggedUserName"]!
                                    <i class="fa fa-caret-down"></i> <!-- Mũi tên xuống -->
                                </a>
                                <ul id="userDropdown" class="dropdown-content" style="display: none;">
                                    <li><a href="@Url.Action("UserInformation", "User")">Xem thông tin chi tiết</a></li>
                                    <li class="logout-item"><a href="@Url.Action("Logout", "User")">Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Index", "User")">Account</a></li>
                        }
                    </ul>
                </nav>
                <a href="@Url.Action("Cart", "Home", new { area = "Customer" })"><img src="~/Content/images/cart.png" width="30" height="30"></a>
                <img src="~/Content/images/menu.png" class="menu-icon" onClick="menutoggle()">
            </div>


        </div>
    </div>



    @RenderBody()

    <!----------------------------------footer------------------------------------->
    <div class="footer">
        <div class="container">

            <div class="row">
                <div class="footer-col-1">
                    <h3>Download Our App</h3>
                    <p>Download App for Android and ios mobile phone.</p>
                    <div class="app-logo">
                        <img src="@Url.Content("~/Content/images/play-store.png")" alt="Play Store">
                        <img src="@Url.Content("~/Content/images/app-store.png")" alt="App Store">
                    </div>
                </div>
                <div class="footer-col-2">
                    <img src="@Url.Content("~/Content/images/logo-white.png")" alt="Logo">
                    <p>Our Purpose Is To Sustainably Make the Pleasure and Benefits of Sports Accessible to the Many.</p>
                </div>
                <div class="footer-col-3">
                    <h3>Useful Links</h3>
                    <ul>
                        <li>Coupons</li>
                        <li>Blog Post</li>
                        <li>Return Policy</li>
                        <li>Join Affiliate</li>
                    </ul>
                </div>
                <div class="footer-col-4">
                    <h3>Follow us</h3>
                    <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Instagram</li>
                        <li>Youtube</li>
                    </ul>
                </div>

            </div>

            <hr><!--horizontal line-->
            <p class="copyright">Copyright 2021 - Apurba Kr. Pramanik</p>

        </div>
    </div>


    <!-----------------------------------js for toggle menu and search----------------------------------------------->
    <script>
var menuItems = document.getElementById("MenuItems");
MenuItems.style.maxHeight = "0px";

function menutoggle() {
    if (MenuItems.style.maxHeight === "0px") {
        MenuItems.style.maxHeight = "200px";
    } else {
        MenuItems.style.maxHeight = "0px";
    }
}

// AJAX tìm kiếm sản phẩm
function searchProducts() {
    var searchTerm = document.getElementById("searchBox").value;
    if (searchTerm.trim() === "") {
        document.getElementById("searchResults").style.display = "none";
        return;
    }

    $.get("@Url.Action("Search", "Product", new { area = "Customer" })", { searchTerm: searchTerm }, function (data) {
        $("#searchResults").html(data).show();
    });
        }

        // Toggle hiển thị menu người dùng
        function toggleUserMenu() {
            var dropdown = document.getElementById("userDropdown");
            dropdown.style.display = dropdown.style.display === "none" ? "block" : "none";
        }

        // Đóng menu khi click ra ngoài
        window.onclick = function (event) {
            if (!event.target.matches('.user-button')) {
                var dropdown = document.getElementById("userDropdown");
                if (dropdown && dropdown.style.display === "block") {
                    dropdown.style.display = "none";
                }
            }
        };

        // Menu toggle
        function menutoggle() {
            var menuItems = document.getElementById("MenuItems");
            menuItems.style.maxHeight = menuItems.style.maxHeight === "0px" ? "200px" : "0px";
        }

    </script>

    <style>

        /* Định dạng "Hello, người dùng" không có viền và màu nền */
        .user-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: transparent; /* Bỏ màu nền */
            border: none; /* Bỏ viền */
            font-size: 16px;
            color: #333;
            cursor: pointer;
            text-align: left;
            width: 200px;
        }

            .user-button i {
                margin-left: 10px;
            }

        /* Định dạng menu thả xuống */
        .dropdown-content {
            position: absolute;
            list-style-type: none;
            margin: 0;
            padding: 0;
            background-color: white;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            min-width: 150px;
            z-index: 1;
        }

            /* Mục trong menu thả xuống */
            .dropdown-content li {
                padding: 8px 10px;
                display: block;
            }

                .dropdown-content li a {
                    color: black;
                    text-decoration: none;
                    display: block;
                }

                    .dropdown-content li a:hover {
                        background-color: #f0f0f0;
                    }

        /* Định dạng để "Đăng xuất" nằm bên trái */
        .logout-item {
            text-align: left; /* Căn trái cho "Đăng xuất" */
        }

        .search-form {
            position: relative; /* Để nút tìm kiếm nằm bên trong thanh tìm kiếm */
            max-width: 500px;
            margin: 0 auto;
            margin-left: 100px;
        }

            .search-form input[type="text"] {
                width: 100%;
                padding: 8px 40px 8px 12px; /* Chừa khoảng trống bên phải cho nút tìm kiếm */
                border: 2px solid #ccc;
                border-radius: 20px;
                outline: none;
                font-size: 16px;
            }

            .search-form button {
                position: absolute; /* Đặt nút tìm kiếm trong thanh tìm kiếm */
                right: 5px; /* Canh lề phải bên trong thanh tìm kiếm */
                top: 50%;
                transform: translateY(-50%); /* Căn chỉnh nút tìm kiếm theo chiều dọc */
                background-color: transparent; /* Làm nền nút trong suốt */
                border: none;
                cursor: pointer;
            }

                .search-form button i {
                    color: #007bff; /* Màu sắc biểu tượng kính lúp */
                    font-size: 18px;
                }

     

    </style>

</body>
</html>
