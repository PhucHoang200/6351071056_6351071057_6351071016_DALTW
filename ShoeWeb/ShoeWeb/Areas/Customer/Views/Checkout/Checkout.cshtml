
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}
@model ShoeWeb.Areas.Customer.CustomerVM.OrderViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />
<div class="container">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4"
             src="~/Content/images/logo.png"
             alt=""
             width="157"
             height="72" />
        <h2>Thanh Toán</h2>

    </div>

    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Product name</h6>
                        <small class="text-muted">Brief description</small>
                    </div>
                    <span class="text-muted">$12</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Second product</h6>
                        <small class="text-muted">Brief description</small>
                    </div>
                    <span class="text-muted">$8</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Third item</h6>
                        <small class="text-muted">Brief description</small>
                    </div>
                    <span class="text-muted">$5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Promo code</h6>
                        <small>EXAMPLECODE</small>
                    </div>
                    <span class="text-success">-$5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$20</strong>
                </li>
            </ul>

            <form class="card p-2">
                <div class="input-group">
                    <input type="text"
                           class="form-control"
                           placeholder="Promo code" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Redeem</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-8 order-md-1">
            @using (Html.BeginForm("Checkout", "Checkout", FormMethod.Post, new { area = "Customer", @class = "needs-validation", novalidate = "true" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.FirstName, "Tên", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.LastName, "Họ", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Phone, "Số điện thoại", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "+84" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Address, "Địa chỉ", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "1234 Main St" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5 mb-3">
                        <select class="css_select form-control selectpicker" id="tinh" name="Province" title="Chọn Tỉnh Thành" data-live-search="true" style="width: 90% !important;">
                            <option value="0">Tỉnh Thành</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.Province, "", new { @class = "text-danger" })
                        <input type="hidden" id="provinceText" name="ProvinceText" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <select class="css_select form-control selectpicker" id="quan" name="District" title="Chọn Quận Huyện" data-live-search="true" style="width: 90% !important;">
                            <option value="0">Quận Huyện</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.District, "", new { @class = "text-danger" })
                        <input type="hidden" id="districtText" name="DistrictText" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <select class="css_select form-control selectpicker" id="phuong" name="Ward" title="Chọn Phường Xã" data-live-search="true" style="width: 90% !important;">
                            <option value="0">Phường Xã</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.Ward, "", new { @class = "text-danger" })
                        <input type="hidden" id="wardText" name="WardText" />
                    </div>


                </div>

                <h4 class="mb-3">Phương thức thanh toán</h4>
                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="VNPay" value="VNPay" name="PaymentMethod" type="radio" class="custom-control-input" required="" />

                        <label class="custom-control-label" for="VNPay">Thanh toán VNPay</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="Cod" value="Cod" name="PaymentMethod" type="radio" class="custom-control-input" required="" />

                        <label class="custom-control-label" for="Cod">Thanh toán khi nhận hàng</label>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.PaymentMethod, "", new { @class = "text-danger" })

                <hr class="mb-4" />
                <button class="btn btn-primary btn-lg btn-block" type="submit">Đặt Hàng</button>
            }
        </div>
    </div>


</div>

