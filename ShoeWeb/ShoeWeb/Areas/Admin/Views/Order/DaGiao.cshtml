
@model ShoeWeb.Areas.Admin.Admin_ViewModel.OrderVM

<table class="table">

    <thead>
        <tr>
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">Tên khách hàng</th>
            <th scope="col">Số lượng sản phẩm</th>
            <th scope="col">Tổng tiền</th>
            <th scope="col">Ngày mua</th>
            <th scope="col">Trạng thái đơn hàng</th>

            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.order)
        {
            <tr id="viewRow-@item.Code">
                <th scope="row">@item.Code</th>
                <td>@item.CustomerName</td>
                <td>@item.Quantity</td>
                <td>
                    <strong> @item.TotalAmount.ToString("#,##0.##")</strong>
                </td>
                <td>@item.CreatedDate</td>
                <td>@(item.isPayment ? "Đã thanh toán" : "Chưa thanh toán")</td>
                <td scope="col" id="manage">
                    <button id="view-detail" type="button" class="btn btn-primary" onclick="XemChiTiet(@item.Id)">
                        <i class="bi bi-eye"></i> Xem
                    </button>
                    

                </td>
            </tr>
        }
    </tbody>

</table>
