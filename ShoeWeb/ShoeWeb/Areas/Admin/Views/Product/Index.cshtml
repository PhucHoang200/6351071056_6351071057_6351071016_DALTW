

﻿@{
    ViewBag.Title = "Index";
}

@model ShoeWeb.Areas.Admin.Admin_ViewModel.ProductVM
<style>
    .table .p-3 {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 15px;
        margin-bottom: 15px;
    }

    /* Định dạng cho bảng */
    table.table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        table.table th,
        table.table td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #dee2e6;
            vertical-align: middle;
        }

        /* Định dạng cho tiêu đề bảng */
        table.table thead th {
            background-color: #007bff;
            color: #fff;
            text-transform: uppercase;
            font-weight: bold;
        }

    /* Định dạng cho các nút sửa và xóa */
    button.btn {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    button.btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        button.btn-secondary:hover {
            background-color: #5a6268;
        }

    button.btn-danger {
        background-color: #dc3545;
        color: white;
    }

        button.btn-danger:hover {
            background-color: #c82333;
        }

    /* Định dạng cho hàng đang được chỉnh sửa */
    #editRow {
        background-color: #f0f0f0;
    }

        /* Các input trong hàng chỉnh sửa */
        #editRow input.form-control {
            width: 100%;
            box-sizing: border-box;
            padding: 8px;
            margin-bottom: 5px;
        }

        /* Định dạng cho nút lưu và hủy */
        #editRow button#save {
            background-color: #28a745;
            color: white;
        }

            #editRow button#save:hover {
                background-color: #218838;
            }

        #editRow button#cancel {
            background-color: #ffc107;
            color: white;
        }

            #editRow button#cancel:hover {
                background-color: #e0a800;
            }

    /* Tạo khoảng cách cho các nút */
    button {
        margin-right: 10px;
    }

    /* Định dạng khoảng cách dòng */
    tbody tr {
        line-height: 1.5;
    }
</style>
<table class="table">
    <div class="p-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
            <i class="bi bi-plus-circle-fill"></i> Thêm sản phẩm mới
        </button>

        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Thêm danh mục mới</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="InputName" class="form-label">Tên danh mục</label>
                                <input name="name" type="text" class="form-control" id="InputName">
                            </div>
                            <div class="mb-3">
                                <label for="InputDescription" class="form-label">Mô tả</label>
                                <input name="description" type="text" class="form-control" id="InputDescription">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                <button type="button" class="btn btn-primary" onclick="Add()">Thêm</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả sản phẩm</th>
            <th scope="col">Số lượng sản phẩm</th>
            <th scope="col">Giá sản phẩm</th>
            <th scope="col">Ảnh sản phẩm</th>
            <th scope="col">Quản lý danh mục</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr id="viewRow-@item.productId">
                <th scope="row">@item.productId</th>
                <td>@item.productName</td>
                <td>@item.productDescription</td>
                <td>@item.quantity</td>
                <td>@item.price</td>
                <td><img src="@item.image" alt="Ảnh sản phẩm" width="120"/></td>
                <td scope="col">

                    <button id="edit" type="button" class="btn btn-secondary" onclick="editItem(@item.productId)">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </button>
                    <button id="delete" type="button" class="btn btn-danger" onclick="deleteItem(@item.productId)">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </td>
            </tr>
            <tr id="editRow-@item.productId" style="display:none;"  enctype="multipart/form-data">
                <th scope="row">@item.productId</th>
                <td>
                    <input type="text" id="ProductName-@item.productId" value="@item.productName" class="form-control">
                </td>
                <td>
                    <input type="text" id="ProductDescription-@item.productId" value="@item.productDescription" class="form-control">
                </td>
                <td>
                    <input type="text" id="ProductDescription-@item.productId" value="@item.productDescription" class="form-control">
                </td>
                <td>@item.quantity</td>
                <td>@item.price</td>
                <td>
                    <input type="file" id="ProductImage-@item.productId" value="@item.image" class="form-control">
                </td>
                <td scope="col">
                    <button type="button" id="save" class="btn btn-secondary" onclick="updateItem(@item.productId)">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <button type="button" id="cancel" class="btn btn-danger" onclick="cancelEdit(@item.productId)">
                        <i class="bi bi-x-circle"></i> Hủy
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>





